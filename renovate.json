{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended",
		":semanticCommits",
		":enableVulnerabilityAlertsWithLabel('security')",
		":maintainLockFilesWeekly",
		":rebaseStalePrs",
		":prHourlyLimitNone"
	],
	"labels": ["dependencies"],
	"rangeStrategy": "bump",
	"schedule": ["every weekend"],
	"timezone": "Asia/Taipei",
	"prConcurrentLimit": 5,
	"ignorePaths": ["**/node_modules/**"],
	"lockFileMaintenance": {
		"enabled": true,
		"schedule": ["before 5am on monday"]
	},
	"packageRules": [
		{
			"description": "Security updates: highest priority, create PR immediately",
			"matchDepTypes": ["dependencies", "devDependencies"],
			"matchUpdateTypes": ["patch", "minor", "major"],
			"matchCategories": ["security"],
			"groupName": "security updates",
			"labels": ["dependencies", "security"],
			"schedule": ["at any time"],
			"automerge": false,
			"prPriority": 10
		},
		{
			"description": "Core build tools: TypeScript, ESLint, Vitest, unbuild",
			"matchPackageNames": ["typescript", "eslint", "vitest", "unbuild"],
			"matchPackagePatterns": ["^@deviltea/eslint-config$", "^@deviltea/tsconfig$", "^@vitest/"],
			"groupName": "core build tools",
			"automerge": false,
			"prPriority": 5
		},
		{
			"description": "Vue ecosystem: Vue, VitePress",
			"matchPackageNames": ["vue", "vitepress", "vue-tsc"],
			"matchPackagePatterns": ["^@vue/"],
			"groupName": "vue ecosystem",
			"automerge": false,
			"prPriority": 4
		},
		{
			"description": "Vite ecosystem",
			"matchPackageNames": ["vite"],
			"matchPackagePatterns": ["^@vitejs/", "^vite-"],
			"groupName": "vite ecosystem",
			"automerge": false,
			"prPriority": 4
		},
		{
			"description": "Nuxt ecosystem",
			"matchPackagePatterns": ["^@nuxt/"],
			"groupName": "nuxt ecosystem",
			"automerge": false,
			"prPriority": 4
		},
		{
			"description": "Iconify related packages",
			"matchPackagePatterns": ["^@iconify/", "^@iconify-json/"],
			"groupName": "iconify packages",
			"automerge": true,
			"prPriority": 2
		},
		{
			"description": "UnoCSS related packages",
			"matchPackagePatterns": ["^@unocss/"],
			"groupName": "unocss packages",
			"automerge": false,
			"prPriority": 3
		},
		{
			"description": "Documentation site packages (docs/)",
			"matchFileNames": ["docs/package.json"],
			"groupName": "documentation dependencies",
			"automerge": true,
			"prPriority": 1
		},
		{
			"description": "Example project packages (examples/)",
			"matchFileNames": ["examples/**/package.json"],
			"groupName": "example dependencies",
			"automerge": true,
			"prPriority": 0
		},
		{
			"description": "Dev dependencies (patch & minor): automerge",
			"matchDepTypes": ["devDependencies"],
			"matchUpdateTypes": ["patch", "minor"],
			"excludePackageNames": ["typescript", "eslint", "vitest", "unbuild"],
			"excludePackagePatterns": ["^@deviltea/", "^@nuxt/", "^@vue/", "^@vitejs/", "^@vitest/", "^@unocss/", "^@iconify/", "^@iconify-json/"],
			"groupName": "dev dependencies (non-major)",
			"automerge": true,
			"prPriority": 1
		},
		{
			"description": "Production dependencies (patch): automerge",
			"matchDepTypes": ["dependencies"],
			"matchUpdateTypes": ["patch"],
			"excludePackagePatterns": ["^@nuxt/", "^@vue/", "^@vitejs/", "^@iconify/", "^@unocss/"],
			"groupName": "production dependencies (patch)",
			"automerge": true,
			"prPriority": 2
		},
		{
			"description": "Production dependencies (minor): requires review",
			"matchDepTypes": ["dependencies"],
			"matchUpdateTypes": ["minor"],
			"excludePackagePatterns": ["^@nuxt/", "^@vue/", "^@vitejs/", "^@iconify/", "^@unocss/"],
			"groupName": "production dependencies (minor)",
			"automerge": false,
			"prPriority": 2
		},
		{
			"description": "Major version updates: requires review",
			"matchUpdateTypes": ["major"],
			"groupName": "major updates",
			"automerge": false,
			"prPriority": 3
		},
		{
			"description": "Node.js version updates",
			"matchPackageNames": ["node"],
			"matchManagers": ["nvm", "nodenv"],
			"enabled": false
		},
		{
			"description": "GitHub Actions",
			"matchManagers": ["github-actions"],
			"groupName": "github actions",
			"automerge": true,
			"prPriority": 1
		}
	]
}
