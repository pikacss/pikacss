{
	"name": "styocss-monorepo",
	"type": "module",
	"version": "0.2.8",
	"private": true,
	"packageManager": "pnpm@9.12.2",
	"description": "The instant on-demand atomic css-in-js engine.",
	"author": "DevilTea <ch19980814@gmail.com>",
	"license": "MIT",
	"keywords": [
		"styocss",
		"atomic-css",
		"css-in-js",
		"atomic-css-in-js-engine"
	],
	"scripts": {
		"build": "pnpm -r --filter=./packages/* run build",
		"stub": "pnpm -r --filter=./packages/* run stub",
		"prepare:local": "pnpm build && tsx ./scripts/prepareLocalInstall.ts",
		"release": "pnpm exec bumpp -r && pnpm run build && pnpm -r --filter=./packages/* publish",
		"calcsize": "tsx ./scripts/calcsize.ts",
		"lint": "eslint --fix .",
		"lint:packages": "eslint --fix ./packages/**/src/*",
		"lint:scripts": "eslint --fix ./scripts/*",
		"lint:configs": "eslint --fix ./alias.ts ./vitest.config.ts",
		"typecheck": "tsc --noEmit --project ./tsconfig.json",
		"publint": "pnpm -r --filter=./packages/* exec publint",
		"test:unit": "vitest",
		"test:coverage": "vitest run --coverage",
		"docs:dev": "pnpm -r --filter=./docs run dev",
		"docs:build": "pnpm -r --filter=./docs run build",
		"docs:preview": "pnpm -r --filter=./docs run preview"
	},
	"devDependencies": {
		"@deviltea/eslint-config": "catalog:",
		"@deviltea/tsconfig": "catalog:",
		"@types/node": "catalog:",
		"@vitest/coverage-v8": "catalog:",
		"brotli-size": "catalog:",
		"bumpp": "catalog:",
		"eslint": "catalog:",
		"fast-glob": "catalog:",
		"gzip-size": "catalog:",
		"happy-dom": "catalog:",
		"pathe": "catalog:",
		"publint": "catalog:",
		"rimraf": "catalog:",
		"terser": "catalog:",
		"tsx": "catalog:",
		"typescript": "catalog:",
		"unbuild": "catalog:",
		"vitest": "catalog:",
		"zx": "catalog:"
	}
}
